<section class="light" id="portfolio">
    @if (herob is not null)
    {
        <img class="background" src="@(herob.Src)" alt="@(herob.Alt)" />
    }
    <h2>About me</h2>
    <!-- Section 1 -->
    <div class="portfolio-container">
    @if (projects is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="portfolio-hero">
            @if (hero is not null)
            {
                <img src="@(hero.Src)" style="height: 90%; width: 100%; object-fit: cover;" 
                    alt="@(hero.Alt)" />
            }
        </div>
        <div style="width: 50%; padding: 4rem; margin: 3rem auto; text-align: center;">
        <h2>Tratamiento de datos</h2>
        @if (aboutMe is null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <p style="text-align: left;">Desde la gestión, preparación, preprocesado y toda la manipulación que conlleve, mis habilidades y conocimientos me permiten trabajar con datos de cualquier tipo y modalidad.
            </p>
            <p style="text-align: left;">Ya sean imágenes, texto, audio, datos numéricos, series temporales, etc. mi amplia experiencia me permiten abordar cualquier tipo de problema y necesidad, todo ello complementado con una amplia formación en análisis y visualización de datos y gestión de bases de datos relacionales y no relacionales.
            </p>
            <hr />
            <ul style="text-align: left; columns: 2; font-size: 1rem; margin: 2rem 3rem; gap: 3rem;">
            @foreach (var skill in aboutMe.Skills)
            {
                <li key="@skill">@skill</li>
            }
            </ul>
            <hr />
            <p style="text-align: left; padding: 1rem 3rem 0;">Todo ello atendido con el más mínimo cuidado y profesionalidad, atendiendo a los conceptos de buenas prácticas en programación y siempre teniendo en cuenta las necesidades del problema a resolver, su utilidad y escalabilidad.</p>
        }
        </div>
    }
    </div>

    <!-- Section 2 -->
    <div class="portfolio-container">
    @if (projects is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div style="width: 50%; padding: 4rem; margin: 3rem auto; text-align: center;">
        <h2>Selección de modelos</h2>
        @if (aboutMe is null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <p style="text-align: left;">Desde la gestión, preparación, preprocesado y toda la manipulación que conlleve, mis habilidades y conocimientos me permiten trabajar con datos de cualquier tipo y modalidad.
                Ya sean imágenes, texto, audio, datos numéricos, series temporales, etc. mi amplia experiencia me permiten abordar cualquier tipo de problema y necesidad, todo ello complementado con una amplia formación análisis y visualización de datos y gestión de bases de datos relacionales y no relacionales.
            </p>
            <hr />
            <ul style="text-align: left; columns: 2; font-size: 1.25rem; margin: 2rem 3rem; gap: 3rem;">
            @foreach (var skill in aboutMe.Skills)
            {
                <li key="@skill">@skill</li>
            }
            </ul>
            <hr />
            <p style="padding: 1rem 3rem 0;">Todo ello atendido con el más mínimo cuidado y profesionalidad, atendiendo a los conceptos de buenas prácticas en programación y siempre teniendo en cuenta las necesidades del problema a resolver, su utilidad y escalabilidad.</p>
        }
        </div>
        <div class="portfolio-hero">
            @if (hero is not null)
            {
                <img src="@(hero.Src)" style="height: 90%; width: 100%; object-fit: cover;" 
                    alt="@(hero.Alt)" />
            }
        </div>
    }
    </div>

    <!-- Section 3 -->
    <div class="portfolio-container">
    @if (projects is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="portfolio-hero">
            @if (hero is not null)
            {
                <img src="@(hero.Src)" style="height: 90%; width: 100%; object-fit: cover;" 
                    alt="@(hero.Alt)" />
            }
        </div>
        <div style="background-color: white; width: 50%; padding: 4rem; margin: 3rem auto; text-align: center;">
        <h2>Entrenamiento, validación y despliegue</h2>
        @if (aboutMe is null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <p class="large">@aboutMe.Description</p>
            <hr />
            <ul style="text-align: left; columns: 2; font-size: 1.25rem; margin: 2rem 3rem; gap: 3rem;">
            @foreach (var skill in aboutMe.Skills)
            {
                <li key="@skill">@skill</li>
            }
            </ul>
            <hr />
            <p style="padding: 1rem 3rem 0;">@aboutMe.DetailOrQuote</p>
        }
        </div>
    }
    </div>
</section>

@code {
    [Parameter, EditorRequired]
    public required HttpClient Http { get; set; }

    [Parameter, EditorRequired]
    public required HeroImageService HeroImageService { get; set; }

    private List<Project>? projects;
    private HeroImage? hero;
    private HeroImage? herob;
    private AboutMe? aboutMe;

    protected override async Task OnInitializedAsync()
    {
        projects = await Http.GetFromJsonAsync<List<Project>>("sample-data/projects.json");
        aboutMe = await Http.GetFromJsonAsync<AboutMe>("sample-data/aboutme.json");
        hero = await HeroImageService.GetHeroAsync(img => img.Name is "portfolio");
        herob = await HeroImageService.GetHeroAsync(img => img.Name is "about");
    }
}
